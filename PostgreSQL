INSERT INTO notification_rules (name, description, rule_type, conditions, actions, created_by) VALUES
('Low Power Factor Alert', 'Alert when power factor falls below 0.85', 'PF_THRESHOLD', 
 '{"threshold": 0.85, "operator": "less_than", "field": "power_factor"}',
 '{"notify_msp": true, "notify_tl": true, "priority": "HIGH"}',
 (SELECT id FROM users WHERE role = 'ADMIN' LIMIT 1)),

('High Bill Amount Alert', 'Alert when bill amount increases by more than 50%', 'BILL_SPIKE',
 '{"threshold": 50, "operator": "percent_increase", "field": "bill_amount", "comparison_period": "previous_month"}',
 '{"notify_msp": true, "notify_tl": true, "priority": "NORMAL"}',
 (SELECT id FROM users WHERE role = 'ADMIN' LIMIT 1)),

('Overdue Payment Alert', 'Alert for bills overdue by more than 30 days', 'OVERDUE_PAYMENT',
 '{"threshold": 30, "operator": "days_overdue", "field": "due_date"}',
 '{"notify_msp": true, "notify_tl": true, "priority": "CRITICAL"}',
 (SELECT id FROM users WHERE role = 'ADMIN' LIMIT 1));

-- Sample templates
INSERT INTO templates (name, type, content_json, created_by) VALUES
('Default Cost Report', 'COST_REPORT',
 '{"columns": ["service_no", "consumer_name", "billing_period", "kwh", "bill_amount", "due_date"], 
   "formulas": {"delta_bill": "current_amount - previous_amount", "percent_change": "(delta_bill / previous_amount) * 100"},
   "layout": {"title": "Cost Analysis Report", "show_summary": true, "group_by": "msp_name"}}',
 (SELECT id FROM users WHERE role = 'ADMIN' LIMIT 1)),

('Power Factor Analysis', 'PF_REPORT',
 '{"columns": ["service_no", "consumer_name", "billing_period", "kw", "kva", "power_factor", "pf_penalty"],
   "formulas": {"calculated_pf": "kw / kva", "penalty_percent": "(pf_penalty / bill_amount) * 100"},
   "layout": {"title": "Power Factor Analysis", "highlight_low_pf": true, "pf_threshold": 0.85}}',
 (SELECT id FROM users WHERE role = 'ADMIN' LIMIT 1)),

('Monthly Payment Report Template', 'MONTHLY_PAYMENT',
 '{"columns": ["service_no", "consumer_name", "abc_code", "msp_name", "billing_period", "bill_amount", "paid_amount", "payment_date", "payment_status", "arrears"],
   "formulas": {"outstanding": "bill_amount - paid_amount", "days_overdue": "CURRENT_DATE - due_date"},
   "layout": {"title": "Monthly Payment Report", "show_totals": true, "group_by": ["msp_name", "payment_status"]}}',
 (SELECT id FROM users WHERE role = 'ADMIN' LIMIT 1));
