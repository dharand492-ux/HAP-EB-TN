# .env.example - Copy this to .env and update with your values

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tneb_pwa
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tneb_pwa
DB_USER=username
DB_PASSWORD=password
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRE=24h
MAGIC_TOKEN_EXPIRE=15m

# Email Configuration (for magic links)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,xlsx,csv,jpg,png

# Scraping Configuration
TNEB_BASE_URL=https://www.tnebnet.org
SCRAPE_DELAY_MIN=2000
SCRAPE_DELAY_MAX=5000
MAX_CONCURRENT_SCRAPES=3
SCRAPE_TIMEOUT=30000
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=false

# Notification Configuration
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_CLEANUP_DAYS=30

# Background Job Configuration
BULL_BOARD_USERNAME=admin
BULL_BOARD_PASSWORD=admin123
JOB_CONCURRENCY=5
JOB_ATTEMPTS=3
JOB_BACKOFF_TYPE=exponential

# Storage Configuration (for production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
AWS_S3_BUCKET=tneb-pwa-files

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
SENTRY_DSN=

# Security Configuration
CORS_ORIGIN=http://localhost:5173
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax
SESSION_SECRET=your_session_secret_here

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
DB_HEALTH_CHECK_TIMEOUT=3000
REDIS_HEALTH_CHECK_TIMEOUT=2000

# Monthly Report Configuration
MONTHLY_REPORT_RETENTION_MONTHS=36
MONTHLY_REPORT_EXPORT_LIMIT=50000
MONTHLY_REPORT_BATCH_SIZE=1000

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN=http://localhost:5173
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000
